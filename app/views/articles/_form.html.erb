<div class="container">
  <% if @article.errors.any? %>
  <h3>Submission failed! Here's what went wrong:</h3>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

  <% end %>

  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <%= form_with( model: @article, class: "shadow p-3 mb-3 rounded bg-form", local: true ) do |f| %>
        <div class="form-group row my-1">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row my-1">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 6, class: "form-control shadow rounded", placeholder: "Article description" %>
          </div>
          </div>

          <div class="form-group-row d-flex justify-content-center my-1">
            <%= f.submit class: "btn btn-outline-dark btn-lg mt-2" %>
          </div>


        <% end %>
  </div>
    <%= link_to "Return to Index", articles_path, class: "text-center mb-2" %>
  </div>
</div>