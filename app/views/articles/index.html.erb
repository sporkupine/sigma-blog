<h1 class="my-4 mx-5">All Articles</h1>

<div class="container">
<% @articles.each do |article| %>
  <div class="row">
  <div class="col-8">
    <div class="card mb-2 shadow rounded" style="background-color: rgb( 251, 251, 215 )">
      <h5 class="card-header mb-2 mt-1">
        <strong><%= article.title %></strong>
      </h5>
      <h6 class="card-title ms-4 mb-2">Author will go HERE</h6>
      <h6 class="card-subtitle ms-4 mb-2 text-muted">
        <%= article.created_at %>
      </h6>
      <p class="card-text ms-4">
        <%= truncate(article.description, length: 100) %>
      </p>
      <span class="ms-4 mb-2">
        <%= link_to 'View', article_path(article) %> | 
        <%= link_to 'Edit', edit_article_path(article) %> | 
        <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
      </span>

    </div>
  </div>
  </div>
<% end %>
</div>
