<h1 class="my-4 mx-5">All Categories</h1>

<div class="container">
  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
    <div class="row">
      <% @categories.each do |category| %>
      <div class="col-3">
        <div class="card ms-1 mb-2 shadow rounded" style="background-color: rgb( 251, 251, 215 )">
          <h6 class="card-body ms-4 mb-2">
              <%= link_to category.name, category_path(category) %>
          </h6>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago</small>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
</div>